<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_movie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:background="@color/colorPrimaryDark"
        android:maxHeight="250dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Family Guy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family GuyFamily Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy Family Guy "
            android:textColor="@color/white" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>